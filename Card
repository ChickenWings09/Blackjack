public class Card {
    private String suit;
    private String rank;
    private int value;

    private static final String[] suits = {"Hearts", "Diamonds", "Clubs", "Spades"};
    private static final String[] ranks = {"2", "3", "4", "5", "6", "7", "8", "9", "10", "Jack", "Queen", "King", "Ace"};

    public Card(String suit, String rank, int value) {
        this.suit = s;
        this.rank = r;
        this.value = v;
    }
}





